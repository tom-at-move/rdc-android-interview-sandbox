<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    >

    <Button
        android:id="@+id/fragment_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fragment Activity"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/compose_activity_button"
        />

    <Button
        android:id="@+id/compose_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Compose Activity"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/fragment_activity_button"
        app:layout_constraintBottom_toTopOf="@id/view_activity_button"
        />

    <Button
        android:id="@+id/view_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Recycler View Activity"
        app:layout_constraintTop_toBottomOf="@+id/compose_activity_button"
        app:layout_constraintBottom_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>